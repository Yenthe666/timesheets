<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_task_form2_inherited" model="ir.ui.view">
            <field name="name">project.task.form.timesheet.location</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
            <field name="arch" type="xml">
                <xpath
                    expr="//page[@id='timesheets_tab']/field[@name='timesheet_ids']/tree"
                    postion="inside"
                >

                    <field name="analytic_latitude" />
                    <field name="analytic_longitude" />
                    <button name="open_google_maps" type="object" icon="fa-map-pin" title="map"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
